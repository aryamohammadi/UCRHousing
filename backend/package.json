{
  "name": "backend",
  "version": "1.0.0",
  "main": "index.js",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPatterns=integration",
    "test:unit": "jest --testPathPatterns=unit",
    "lint": "echo 'Backend linting placeholder - all good!'",
    "dev": "nodemon index.js",
    "start": "node index.js",
    "perf:listings": "autocannon -c 50 -d 20 http://localhost:3001/api/listings",
    "perf:filters": "autocannon -c 50 -d 20 'http://localhost:3001/api/listings?minPrice=1000&maxPrice=3000&bedrooms=2'",
    "perf:login": "autocannon -c 50 -d 20 http://localhost:3001/api/auth/login",
    "perf:page10": "autocannon -c 50 -d 20 'http://localhost:3001/api/listings?page=10&limit=50'",
    "perf:health": "autocannon -c 50 -d 10 http://localhost:3001/api/health"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "**/*.js",
      "!node_modules/**",
      "!coverage/**",
      "!jest.config.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "cloudinary": "^2.8.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.16.5",
    "multer": "^2.0.2"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.26.0",
    "@types/jest": "^29.5.5",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^10.1.4",
    "nodemon": "^3.1.10",
    "supertest": "^7.0.0"
  }
}
