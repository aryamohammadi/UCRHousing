# UCR HousingConnect .env file configuration
# Copy this file to .env and fill in the values for your environment

# Flask configuration
FLASK_APP=app
FLASK_ENV=production  # 'development' or 'production'
SECRET_KEY=your-strong-secret-key-here  # Generate a strong random secret key

# Database configuration
# SQLite (development)
# DATABASE_URL=sqlite:///instance/housing.sqlite

# PostgreSQL (production)
DATABASE_URL=postgresql://username:password@localhost:5432/ucrhousing

# API keys
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
OPENAI_API_KEY=your-openai-api-key

# Server configuration
PORT=8000  # Port for production server
HOST=0.0.0.0  # Host for production server
WORKERS=4  # Number of Gunicorn workers (or auto-calculate based on CPU cores)

# Error reporting
SENTRY_DSN=your-sentry-dsn  # Optional: For error tracking with Sentry

# SSL configuration
SSL_CERT_PATH=/path/to/your/fullchain.pem
SSL_KEY_PATH=/path/to/your/privkey.pem 